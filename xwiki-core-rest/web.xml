<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<!--  Add the following to XWiki's web.xml -->

	<!-- Application class name -->
	<context-param>
		<param-name>org.restlet.application</param-name>
		<param-value>
			org.xwiki.rest.RestApplication  
		</param-value>
	</context-param>

	<!-- Restlet adapter -->
	<servlet>
		<servlet-name>XWikiRestletServlet</servlet-name>
		<servlet-class>
			org.xwiki.rest.XWikiRestletServlet  
		</servlet-class>
	</servlet>

	<!-- Catch all requests -->
	<servlet-mapping>
		<servlet-name>XWikiRestletServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
</web-app>